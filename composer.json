{
    "name": "sigmie/cli",
    "description": "Sigmie command line interface for interacting with Elasticsearch",
    "keywords": [
        "php",
        "elasticsearch",
        "cli",
        "sigmie"
    ],
    "homepage": "https://docs.sigmie.com/cli",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Nico",
            "email": "nico@sigmie.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Sigmie\\Cli\\": "src/"
        },
        "exclude-from-classmap": [
            "tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.4",
        "symfony/console": "^5.0",
        "symfony/dependency-injection": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "squizlabs/php_codesniffer": "^3.5",
        "phpstan/phpstan": "^0.12.6",
        "symfony/var-dumper": "^5.0"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "bin": [
        "bin/sigmie"
    ],
    "minimum-stability": "dev",
    "prefer-stable": true
}